<div class="list-group mb-2">
  <a href="#" class="list-group-item list-group-item-action bg-light">
    Cities
  </a>

  <% @cities = City.all %>

  <% @cities.each do |city| %>
    <%= link_to city.name, city, :class => "list-group-item text-muted list-group-item-action text-truncate" %>
  <% end %>
</div>
