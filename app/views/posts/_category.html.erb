<h1 class="display-4 text-center mb-4">Choose your category:</h1>

<div class="col offset-lg-4">
  <% Category.all.each do |category| %>
    <div class="form-check mb-2">
      <%= radio_button :post, :category_id, category.id, class: "form-check-input" %>
      <label class="form-check-label" for="exampleRadios1">
        <%= category.name %>
      </label>
    </div>
  <% end %>

</div>

