<div class="container-fluid">

  <%= render "breadcrumb", post: @post %>

  <div class="row">
    <div class="col small text-center">

      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="page-item"><a class="page-link" href="#">Previous</a></li>
          <li class="page-item"><a class="page-link" href="#">Up</a></li>
          <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
      </nav>

    </div>
  </div>

  <div class="row mb-4">
    <div class="col">

			<nav class="nav justify-content-center">
				<a class="nav-link active" href="#">Left</a>
				<a class="nav-link" href="#">Middle</a>
				<a class="nav-link" href="#">Right</a>
			</nav>

    </div>
  </div>

  <div class="row">

    <div class="col-lg-7">
      <h1 class="display-5 text-truncate"><%= @post.title %></h1>
      <h2 class="lead text-truncate">Price: $<%= @post.price_cents %></h2>
			<img src="/DSC_0068.JPG" class="img-fluid mb-4" alt="Responsive image">
    </div>

    <div class="col-lg-5 mt-5 p-2">
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d101266.92986047953!2d-121.96442134991197!3d37.517550380992425!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fc42851208cdb%3A0x2ee76e1eb80863b3!2sFremont%2C%20CA%2094539!5e0!3m2!1sen!2sus!4v1568138552016!5m2!1sen!2sus" width="400" height="300" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
    </div>

	</div>

  <div class="row">
    <div class="col">
      <p><%= @post.description %></p>
    </div>
	</div>

  <div class="row">
    <div class="col">
      <%= render "metadata" %>
    </div>
	</div>

</div>

  
