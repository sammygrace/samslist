<h1 class="display-4 text-center mb-4">Choose your county:</h1>

<div class="col offset-lg-4">
  <% County.all.each do |county| %>
      <div class="form-check mb-2">
        <%= radio_button(:post, :county_id, county.id, class: "form-check-input") %>
        <label class="form-check-label" for="exampleRadios1">
          <%= county.name %>
        </label> 
      </div>
  <% end %>
</div>

