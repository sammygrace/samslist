<div class="container-fluid">

  <div class="row mt-md-3 mt-lg-4">
    <div class="col">
      <%= render "breadcrumb" %>
    </div>
  </div>

  <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
    <% @tabs.each do |tab| %>
			<li class="nav-item">
				<a class="nav-link" id="pills-<%= tab %>-tab" data-toggle="pill" href="#pills-<%= tab %>" role="tab" aria-controls="pills-<%= tab %>" aria-selected="false"><%= tab.capitalize %></a>
			</li>
    <% end %>
  </ul>

  <div class="tab-content" id="pills-tabContent">
    <% @tabs.each.with_index do |tab, index| %>
      <div class="tab-pane fade" id="pills-<%= tab %>" role="tabpanel" aria-labelledby="pills-<%= tab %>-tab"><%= render "posts/#{tab}" %></div>
    <% end %>
  </div>

</div>
