<h1 class="display-4 text-center mb-4">Edit Your Post:</h1>
<form>

    <div class="form-group col-md-6 offset-lg-3">
      <label for="formGroupExampleInput">Title of your post</label>
      <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
    </div>

    <div class="form-group col-md-6 offset-lg-3">
      <label for="formGroupExampleInput">Price</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">$</div>
        </div>
        <%= form.text_field :price_cents, class: "form-control", placeholder: "Amount" %>
      </div>
    </div>

  <div class="form-group col-md-6 offset-lg-3">
    <label for="inputPhone">Phone Number</label>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="form-group col-md-6 offset-lg-3">
    <label for="inputEmail">Email</label>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group col-md-6 offset-lg-3">
    <label for="inputAddress">Address</label>
    <%= form.text_field :street_address, class: "form-control", placeholder: "1234 Main St" %>
  </div>

  <div class="form-group col-md-6 offset-lg-3">
    <label for="inputCity">City</label>
    <%= form.text_field :city_or_province, class: "form-control" %>
  </div>


  <div class="form-row ml-2">
    <div class="form-group col-md-3 offset-lg-3">
      <label for="inputState">State</label>
      <select id="inputState" class="form-control">
        <option selected>Choose...</option>
        <option>...</option>
      </select>
    </div>

    <div class="form-group col-md-2">
      <label for="inputZip">Zip</label>
      <%= form.text_field :zip, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-md-6 offset-lg-3">
    <label for="exampleFormControlTextarea1">Description</label>
    <%= form.text_area :description, class: "form-control" %>
  </div>

</form>

